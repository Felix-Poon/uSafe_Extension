{
  "include": ["src/**/*", "webpack/**/*"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["src/@types/*", "*"]
    },
    "resolveJsonModule": true
  }
}
